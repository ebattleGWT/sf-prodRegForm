          <script>

document.addEventListener("DOMContentLoaded", function() {
  var form = document.getElementById("product-registration");
  form.addEventListener("submit", function(event) {
    event.preventDefault();

   
    const type = document.getElementById('type').value;
    const modelNumber = document.getElementById('model_number').value;
    const serialNumber = document.getElementById('serial_number').value;
    const placePurchased = document.getElementById('place_purchased').value;
    const receipt_upload = document.getElementById('receipt_upload').value;
    const firstName = document.getElementById('first_name').value;
    const lastName = document.getElementById('last_name').value;
    const address = document.getElementById('address').value;
    const aptSuite = document.getElementById('apt_suite').value;
    const state = document.getElementById('state').value;
    const city = document.getElementById('city').value;
    const zip = document.getElementById('zip').value;
    const phoneNumber = document.getElementById('phone_number').value;
    const email = document.getElementById('email').value;
    const terms = document.getElementById('accept_terms').value;
   
    console.log('Type:', type);
    console.log('Model Number:', modelNumber);
    console.log('Serial Number:', serialNumber);
    console.log('Place Purchased:', placePurchased);
    console.log('Receipt:', receipt_upload);
    console.log('First Name:', firstName);
    console.log('Last Name:', lastName);
    console.log('Address:', address);
    console.log('Apt or Suite:', aptSuite);
    console.log('State:', state);
    console.log('City:', city);
    console.log('Zip:', zip);
    console.log('Phone Number:', phoneNumber);
    console.log('Email:', email);

  

const formData = {
  Type__c: type,
  Model_Number__c: modelNumber,
  Serial_Number__c: serialNumber,
  Place_Purchased__c: placePurchased,
  receiptUpload: receipt_upload,
  First_Name__c: firstName,
  Last_Name__c: lastName,
  Mailing_Address__c: address,
  Mailing_Apt_Suite__c: aptSuite,
  Mailing_State__c: state,
  Mailing_City__c: city,
  Mailing_Zip_Code__c: zip,
  Phone_Number__c: phoneNumber,
  Email_Address__c: email,
  termsCheck: terms,
};


      // After capturing formData
fetch('https://greenworkstools123.secure.force.com/forms/lightning/lightning.out.js', {
  method: 'POST',
  headers: {
    'Content-Type': 'application/json',
  },
  body: JSON.stringify(formData),
})
.then(response => {
  if (response.ok) {
    // Handle successful submission
    console.log('Form submitted successfully');
  } else {
    // Handle error in submission
    console.error('Error submitting form');
  }
})
.catch(error => {
  console.error('Error:', error);
});
    
  });
});



          

</script>

